<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

    <h2 class="text-center my-5">フォロー中</h2>

      <% if @users.count == 0 %>
        <h3 class="text-center">ユーザーはいません</h3>
      <% else %>
        <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th class="text-center">ニックネーム</th>
              <th class="text-center">フォロー数</th>
              <th class="text-center">フォロワー数</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image, style:"width: auto; height: 150px;" %>
                <% end %>
              </td>
              <td class="text-center align-middle">
                <%= link_to user_path(user) do %>
                <%= user.name %>
                <% end %>
              </td>
              <td class="text-center align-middle">
                <%= user.followings.count %>
                </td>
              <td class="text-center align-middle">
                <%= user.followers.count %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>

   </div>
  </div>
</div>
