        <h2>ユーザー情報</h2>
          <table class="table">
            <tr><%= image_tag current_user.get_profile_image, size:'100x100' %></tr>
            <theade>
              <tr>
                <th>ニックネーム</th>
                <th><%= user.name %></th>
              </tr>
              <tr>
                <th>自己紹介</th>
                <th><%= user.introduction %></th>
              </tr>
            </heade>
            <tbody>
            <tr>
              <th>フォロー中</th>
              <th><%= link_to user_followings_path(user.id) do %>
              <%= user.followings.count %>
              <% end %>
              </th>
            </tr>
            <tr>
              <th>フォロワー</th>
              <th><%= link_to user_followers_path(user.id) do %>
              <%= user.followers.count %>
              <% end %>
              </th>
            </tr>
            <tr>
              <th><% if current_user == @user %>
                <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-secondary" %>
                <% end %>
              </th>
              <th></th>
            </tr>
          </tbody>
        </table>