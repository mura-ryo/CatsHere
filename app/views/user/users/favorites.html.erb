<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

    <h2 class="text-center my-5">いいね一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th>タイトル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @favorite_posts.each do |post|%>
            <tr>
              <td>
                <%= image_tag post.user.get_profile_image, size:'50x50' %>
              </td>
              <td>
                <%= link_to user_path(post.user) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                <%= post.title %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>