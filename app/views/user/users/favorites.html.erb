<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

    <h2 class="text-center my-5">いいね一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="text-center">投稿日時</th>
            <th class="text-center">プロフィール画像<br/>
                                    投稿主</th>
            <th class="text-center">投稿画像<br/>
                                    タイトル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @favorite_posts.each do |post|%>
            <tr>
              <td class="text-center align-middle">
                <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
              <td class="text-center align-middle">
                <%= link_to user_path(post.user.id) do %>
                <%= image_tag post.user.get_profile_image, style:"width: auto; height: 80px;" %>
                <% end %>
                <br/>
                <%= link_to user_path(post.user) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td class="text-center align-middle">
                <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_image, style:"width: auto; height: 120px;" %>
                <% end %>
                <br/>
                <%= link_to post_path(post.id) do %>
                <%= post.title %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>