<div class="container">
  <div class="row pt-3">
    <dib class="col-3"></dib>
    <div class="col-6 auto">
      

<h2>チャット</h1>
<h4><%= @another_entry.user.name %>さんとのメッセージ</h4>

<hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
    <strong><%= m.content %></strong>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_with model: @message, url: messages_path, method: :post, local: true do |f| %>
  <%= f.text_field :content, placeholder: "メッセージを入力して下さい", class: "form-control" %>
  <%= f.hidden_field :room_id, value: "@room.id" %>
  <br>
  <%= f.submit "送信する" %>
<% end %>

