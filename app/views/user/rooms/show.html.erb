<div class="container">
  <div class="row pt-3">
    <div class="col-xl-9 auto">

<h1>チャット</h1>
<h3>参加者</h3>
<% @entries.each do |e| %>
  <p><strong><%= e.user.name %>さん</strong></p>
<% end %>

<hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
    <strong><%= m.content %></strong>
    <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %></a></strong></small>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_with model: @message, local: true do |f| %>
  <%= f.text_field :content, placeholder: "メッセージを入力して下さい", size:"70" %>
  <%= f.hidden_field :room_id, value: "@room.id" %>
  <br>
  <%= f.submit "送信する" %>
<% end %>

