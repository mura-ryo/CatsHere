<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">
      

    <h2 class="text-center my-5">チャット</h2>
　　<h4><%= @another_entry.user.name %>さんとのメッセージ</h4>

<hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
    <strong><%= m.content %></strong>
　　<small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %></a></strong></small>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_with model: @message, url: messages_path, method: :post, remote: true do |f| %>
  <%= f.text_field :content, placeholder: "メッセージを入力して下さい", class: "form-control" %>
  <%= f.hidden_field :room_id %>
  <br>
  <%= f.submit "送信する" %>
<% end %>

