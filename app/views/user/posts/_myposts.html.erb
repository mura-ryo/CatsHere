        <h2>投稿一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>ニックネーム</th>
              <th>タイトル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= image_tag post.user.get_profile_image, size:'80x80' %>
                </td>
                <td>
                  <%= link_to user_path(post.user) do %>
                  <%= post.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                  <% end %>
                </td>
                <td colspan="3"></td>
              </tr>
            <% end %>
          </tbody>
        </table>