<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

<table class="table table-hover table-inverse">

    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.user.get_profile_image, size:'50x50' %>
        </td>
        <td>
          <%= link_to user_path(post.user) do %>
          <%= post.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
          <%= post.title %>
          <% end %>
        </td>
        <td colspan="3"></td>
      </tr>
    <% end %>
</table>

        </div>
    <div class="col-1"></div>

  </div>
</div>