<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">
      
      <h2 class="text-center my-5">投稿編集</h2>
　　　　
      <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
        
      <table>
      　<tr>
      　  <td>タイトル</td>
      　  <td><%= f.text_field :title, placeholder: "タイトル" %></td>
      　</tr>
      　<tr>
      　  <td></br></td>
      　</tr>
      　<tr>
      　  <td></br></td>
      　</tr>
      　<tr>
      　  <td>本文</td>
      　  <td><%= f.text_area :body, placeholder: "本文", size: "50x5" %></td>
      　</tr>
      　<tr>
      　  <td></br></td>
      　</tr>
　　　　<tr class ="text-center">
　　　　  <td></td>
      　  <td><%= f.submit '更新', class: 'btn btn-success px-4' %></td>
      　</tr>
      <% end %>
      　<tr>
      　  <td></br></td>
      　</tr>
      　<tr>
      　  <td>
      　    <%= link_to "戻る", post_path(@post.id) %>/
      　  </td>
      　  <td>
      　    <%= link_to "投稿一覧へ", posts_path %>
      　  </td>
      　</tr>
  　　  </table>
            
    </div>
  </div>
</div>

        
   