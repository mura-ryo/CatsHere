<div class="container">
  <div class="row pt-3">
    <div class="col-2"></div>
    <div class="col-8 auto">

      <h2 class="text-center my-5">投稿一覧</h2>

      <!-- 検索フォーム -->
      <div class="text-right"><%= render 'user/searches/search' %></div>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="text-center">投稿日時</th>
            <th class="text-center">ニックネーム</th>
            <th class="text-center">タイトル</th>
            <th class="text-center"></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="text-center align-middle">
                <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
              <td class="text-center align-middle">
                <%= link_to user_path(post.user) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td class="text-center align-middle">
                <%= link_to post_path(post.id) do %>
                <%= post.title %>
                <% end %>
              </td>
              <td class="text-center align-middle">
                <%= image_tag post.get_image, style:"width: auto; height: 100px;" %>
              </td>
              <td colspan="3"></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center"><%= paginate @posts %></div>
    </div>
  </div>
</div>
