<header>
  <!--会員のログイン時に表示-->
  <% if user_signed_in? %>
<nav class = "navbar navbar-expand-lg navbar-dark", style="background-color: #FFCC99;">
    <div class = "container">

  <span>
    <%= link_to image_tag("logo.png" ,size: '110x50') ,posts_path %>
  </span>
  <div class ="d-flex align-items-center justify-content-center text-white">
    <a class= "text-secondary">ようこそ、<%= current_user.name %>さん！</a>
  </div>
  <ul class ="navbar-nav ml-10">
    <li>
    <li>
      <%= link_to new_post_path do %>
      <button class="text-secondary btn-light rounded-pill">投稿</button>
      <% end %>
    </li>
    <li>
      <%= link_to posts_path do %>
      <button class="text-secondary btn-light rounded-pill">投稿一覧</button>
      <% end %>
    </li>
    <li>
      <%= link_to user_path(current_user.id) do %>
      <button class="text-secondary btn-light rounded-pill">マイページ</button>
      <% end %>
    </li>
    <li>
      <%= link_to rooms_path do %>
      <button class="text-secondary btn-light rounded-pill">チャット</button>
      <% end %>
