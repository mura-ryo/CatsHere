      <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn-light text-secondary rounded-pill " %>
    </li>
  </ul>
</nav>
  <!--管理者のログイン時に表示-->
  <% elsif admin_signed_in? %>
<nav class = "navbar navbar-expand-lg navbar-dark", style="background-color: #333333;">
  <div class = "container">
  <span>
    <%= link_to image_tag("no_image.jpg" ,size: '80x40'), admin_posts_path %>
  </span>
  <ul class ="navbar-nav ml-10">
    <li>
      <%= link_to "投稿一覧", admin_posts_path, class: "nav-link text-light" %>
    </li>
    <li>
      <%= link_to "会員一覧", admin_users_path, class: "nav-link text-light" %>
    </li>
    <li>
      <%= button_to "ログアウト", destroy_admin_session_path, method: :delete, class: "radius" %>
    </li>
  </ul>
</nav>
　<!--ログアウト時に表示-->
  <% else %>
    <nav class = "navbar navbar-expand-lg navbar-dark", style="background-color: #66CCFF;">
          <div class = "container">
      <span>
        <%= link_to image_tag("logo.png" ,size: '110x50'), root_path %>
      </span>
  　     <ul class ="navbar-nav ml-10">
          <li>
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link text-light" %>
          </li>
          <li>
            <%= link_to "ログイン", new_user_session_path, class: "nav-link text-light" %>
          </li>
        </ul>
    </nav>
  <% end %>
  </div>
