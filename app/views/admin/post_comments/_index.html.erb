<table class="table table-borderless text-center">
  <tbody>
      <% post.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to admin_user_path(post_comment.user) do %>
            <%= image_tag post_comment.user.get_profile_image, size: "50x50" %>
            <%= post_comment.user.name %>
          <% end %>
        </td>
        <td class="text-center align-middle"><%= post_comment.comment %></td>
        <td class="text-center align-middle">
          <%= link_to "削除", admin_post_post_comment_path(post, post_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>