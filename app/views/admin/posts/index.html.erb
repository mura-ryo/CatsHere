<div class="container">
  <div class="row pt-3">
    <div class="col-xl-9 auto">

        <h2>投稿一覧（管理者）</h2>
        <!-- 検索フォーム -->
      　<%= render 'admin/searches/search' %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>ユーザー名</th>
              <th>Title</th>
            </tr>
          </thread>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= image_tag post.user.get_profile_image, size:'80x80' %>
                </td>
                <td>
                  <%= link_to admin_user_path(post.user) do %>
                  <%= post.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_post_path(post.id) do %>
                  <%= post.title %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>