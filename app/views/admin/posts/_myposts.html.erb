<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

      <table class="table table-hover table-inverse">

        <% @posts.each do |post| %>
          <tr>
            <td class="text-center align-middle">
              <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
            </td>
            <td class="text-center align-middle">
              <%= link_to admin_user_path(post.user) do %>
              <%= post.user.name %>
              <% end %>
            </td>
            <td class="text-center align-middle">
              <%= link_to admin_post_path(post.id) do %>
              <%= post.title %>
              <% end %>
            </td>
            <td class="text-center align-middle">
              <%= link_to admin_post_path(post.id) do %>
              <%= image_tag post.get_image, style:"width: auto; height: 80px;" %>
              <% end %>
            </td>
            <td colspan="3"></td>
          </tr>
        <% end %>
      </table>
    <div class="text-center"><%= paginate @posts %></div>
    </div>
  </div>
</div>