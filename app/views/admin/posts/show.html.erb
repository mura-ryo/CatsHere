<% flash.each do |key, value| %>
  <p><%= value %></p>
<% end %>

<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
        <h2>post detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
             <td><%= image_tag @post.user.get_profile_image, size:"80x80" %></br><%= link_to user_path(@user.id) do %><%= @user.name %><% end %></td>
            </tr>
            <tr>
             <td><%= link_to post_path(@post.id) do %><%= @post.title %><% end %></td>
            </tr>
            <tr>
             <td><%= @post.body %></td>
            </tr>
            <tr></tr>
             <% if @post.user == current_user %>
             <td><%= link_to "Edit", edit_post_path(@post), class:"btn btn-sm btn-success" %></td>
             <td><%= link_to "Destroy", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
             <% end %>
            </tr>
          </tbody>
          </table>
     </div>        
     </div>
  </div>
</main>