<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

      <h2 class="text-center my-5">検索結果(管理者)</h2>

　　　<table class="table table-hover table-inverse">
　　　  <!--検索対象モデルがUserの時 -->
　　　  <% if @range == "会員" %>
          <thead>
            <tr>
              <th></th>
              <th class="text-center">ニックネーム</th>
              <th colspan= "3"></th>
            </tr>
          </thead>
　　　      <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
              <td class="text-center align-middle"><%= user.name %></td>
              <td class="text-center align-middle"><%= link_to "詳細", admin_user_path(user.id) %></td>
            </tr>
          </tbody>
          <% end %>
　　　  <% else %>
　　　    <!--検索対象モデルが投稿の時-->
          <thead>
            <tr>
              <th></th>
              <th class="text-center">ニックネーム</th>
              <th class="text-center">タイトル</th>
              <th colspan="2"></th>
            </tr>
          </thead>
　　　      <% @posts.each do |post| %>
          <tbody>
            <tr>
              </td>
              <td class="text-center align-middle">
                <%= link_to admin_user_path(post.user) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td class="text-center align-middle"><%= post.title %></td>
              <td class="text-center align-middle">
                <%= link_to admin_post_path(post.id) do %>
                <%= image_tag post.get_image, size:'80x80' %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>