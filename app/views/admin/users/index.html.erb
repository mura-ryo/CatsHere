<div class="container">
  <div class="row pt-3">
    <div class="col-3"></div>
    <div class="col-6 auto">

      <h2 class="text-center my-5">会員一覧（管理者）</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th colspan= "3">会員ステータス</th>
          </tr>
        </thread>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '80x80' %></td>
              <td>
                <%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
                <% end %>
              </td>
              <% if user.is_deleted == false %>
              <td>有効</td>
              <% else %>
              <td>退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center"><%= paginate @users %></div>
    </div>
  </div>
</div>